{
    "name": "iceman/tg-php",
    "description": "Telegram MTproto API library",
    "type": "library",
    "license": "GNU LGPLv3",
    "authors": [
        {
            "name": "Mike Iceman",
            "email": "iceman@slotex.pw"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-ctype": "*",
        "ext-iconv": "*"
    },
    "require-dev": {
        "jaschilz/php-coverage-badger": "^2.0",
        "larapack/dd": "^1.1",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "MikeIceman\\TelegramAPI\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MikeIceman\\TelegramAPI\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always --coverage-text",
        "check-cs": "vendor/bin/phpcs",
        "check-cp": "vendor/bin/phpcpd src",
        "fix-cs": "vendor/bin/phpcbf -p"
    }
}
